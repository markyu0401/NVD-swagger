{
  "openapi": "3.0.0",
  "info": {
    "title": "NVD CVE API",
    "description": "Fetch CVE details from the National Vulnerability Database",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://services.nvd.nist.gov/rest/json/cves/2.0"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Retrieve CVE Data",
        "parameters": [
          {
            "name": "cveId",
            "in": "query",
            "required": false,
            "description": "CVE ID (e.g., CVE-2024-6387)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "keywordSearch",
            "in": "query",
            "required": false,
            "description": "Keyword search for vulnerabilities",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with CVE data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request (invalid parameters)"
          },
          "403": {
            "description": "Forbidden (API key issue)"
          }
        }
      }
    }
  }
}